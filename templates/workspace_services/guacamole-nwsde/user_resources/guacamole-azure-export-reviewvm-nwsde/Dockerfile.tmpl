# syntax=docker/dockerfile-upstream:1.4.0
FROM --platform=linux/amd64 debian:bookworm-slim

# PORTER_INIT

WORKDIR $BUNDLE_DIR

# copy files from the 'base' template (dir passed to porter via --build-context)
# ignoring hadolint DL3022; for details see https://github.com/hadolint/hadolint/issues/830
#
# hadolint ignore=DL3022
COPY --from=guacamole-azure-export-reviewvm --link . ${BUNDLE_DIR}/

# Copy and change the file extension of .terraform file to .tf
COPY ./terraform/main_override.terraform "${BUNDLE_DIR}"/terraform/main_override.tf
COPY ./terraform/vmextensions-nwsde.terraform "${BUNDLE_DIR}"/terraform/vmextensions-nwsde.tf

# PORTER_MIXINS

# Use the BUNDLE_DIR build argument to copy files into the bundle
COPY --link . ${BUNDLE_DIR}/
